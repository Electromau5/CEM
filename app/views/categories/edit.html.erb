<div class = "container-fluid">
	<h1 style="text-align:center">Edit Category</h1>
		<div class = "row">
			<div class = "col-md-6 col-md-offset-3">
				<%= form_for @category do |c| %>
					<%= c.label :name %><br />
					<%= c.text_field :name, class: "form-control" %>
					<%= c.submit %>
				<% end %>
			</div>
		</div>
</div>
