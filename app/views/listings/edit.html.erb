<%= render 'layouts/header' %>
<div class = "container-fluid">
	<h1 style="text-align:center">Edit Listing</h1>
		<div class = "row">
			<div class = "col-md-6 col-md-offset-3">
				<%= form_for @listing do |l| %>
					<%= l.label :name %><br />
					<%= l.text_field :name, class: "form-control" %>
					<%= l.label :feature1 %><br />
					<%= l.text_area :feature1, class: "form-control" %>
					<%= l.label :feature2 %><br />
					<%= l.text_area :feature2, class: "form-control" %>
					<%= l.label :feature3 %><br />
					<%= l.text_area :feature3, class: "form-control" %>
					<%= l.label :price %><br />
					<%= l.text_field :price, class: "form-control" %>
					<%= l.label :condition %><br />
					<%= l.text_field :condition, class: "form-control" %>
					<%= l.label :image %>
					<%= l.file_field :image, class: "form-control"%><br /><br />
					<%= l.submit %>
				<% end %>
			</div>
		</div>
</div>
