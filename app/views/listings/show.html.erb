 <%= render 'layouts/header' %> 
<div class = "container">
	<div class = "jumbotron">
		<div class = "row">
			<div class = "col-md-6">
						<%= image_tag @listing.image.url(:medium), data: { zoom_image: @listing.image.url(:large) }, :class => "zoom", :id => "image1" %>
				<div class -"row">
					<div class = "col-md-10">
						<div id="gal1">
						<%= image_tag @listing.image.url(:thumb), data: { zoom_image: @listing.image.url(:large) }, :class => "zoom" %>
						<%= image_tag @listing.image.url(:thumb), data: { zoom_image: @listing.image.url(:large) }, :class => "zoom" %>
						<%= image_tag @listing.image.url(:thumb), data: { zoom_image: @listing.image.url(:large) }, :class => "zoom" %>
						<%= image_tag @listing.image.url(:thumb), data: { zoom_image: @listing.image.url(:large) }, :class => "zoom" %>
						</div>
					</div>
				</div>

			</div>			
						
				<div class = "col-md-6">
					<div class = "listing_set_1">
						<div class="title" style="font-weight:bold;font-size:20px">
							Product Name: <br/>
						</div>
							<div clas="fill" style="font-size:18px">
								<%= @listing.name %><br /><br />
							</div>
									<div class="title" style="font-weight:bold;font-size:20px">
										Condition: <br />
									</div>
										<div clas="fill" style="font-size:15px">
											<%= @listing.condition %>
										</div><br />
						</div>
							<div class="title" style="font-weight:bold;font-size:20px">
								Features: <br/>
							</div>
							<%= @listing.feature1 %><br /><br />
							<%= @listing.feature2 %><br /><br />
							<%= @listing.feature3 %><br /><br />
								<span class = "label label-info" style="font-size:25px;background-color:#008ac1;padding:6px">
									<%= number_to_currency(@listing.price) %>
								</span><br /><br />
					
				</div>
			</div>
		</div>
	</div>
	