<div class = "container-fluid">
	<h1 style="text-align:center">Edit Post</h1>
		<div class = "row">
			<div class = "col-md-6 col-md-offset-3">
				<%= form_for @post do |l| %>
					<%= l.label :title %><br />
					<%= l.text_field :title, class: "form-control" %>
					<%= l.label :description %><br />
					<%= l.text_area :description, class: "form-control" %>
					<%= l.label :image %>
					<%= l.file_field :image, class: "form-control"%><br /><br />
					<%= l.submit %>
				<% end %>
			</div>
		</div>
</div>