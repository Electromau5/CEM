  <div class = "container-fluid">
    <div class = "row">
		<% @post.each do |p| %>
		  <div class = "col-xs-12 col-md-3 col-sm-6">
		    <div class = "thumbnail">
            	<%= link_to image_tag(p.image.url(:medium)), p %>
            	<p><%= p.title %></p>
		    </div>
          </div>
		<% end %>
	</div>
  </div>	  
  <%= render 'layouts/footer' %>
		